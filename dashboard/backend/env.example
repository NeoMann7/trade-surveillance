# Flask Configuration
FLASK_DEBUG=False
PORT=5001

# Storage Configuration
USE_S3=true
SURVEILLANCE_BASE_PATH=/app/data

# S3 Configuration
S3_BUCKET_NAME=icmemo-documents-prod
S3_BASE_PREFIX=trade_surveillance
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# OpenAI Configuration (for AI analysis and email matching)
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Configuration (for audio transcription)
# Note: key2.json file must be in project root (copied to /app/key2.json in Docker)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/key2.json

# CORS Configuration (comma-separated list of allowed origins)
# Include your frontend URL (Cloudflare tunnel URL) here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend URL (Cloudflare tunnel URL for frontend)
# This will be automatically added to CORS_ORIGINS if not already included
FRONTEND_URL=


